#1. if - условное ветвление.
    if (условие) оператор
    else оператор

#2. switch - выбор ветвления
    switch (выражение) {
        case константа:
            последовательность операторов
            break;
        // ...
    }");

#3. for - цикл
    for (инициализация; условие; итерация) {
        последовательность операторов
    }

#4. while - цикл
    while (условие) {
        последовательность операторов
    }